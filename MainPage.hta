<script type="text/vbscript">

Sub Window_onLoad
	arrCommands = Split(oHTA.commandLine, chr(94))
    window.resizeTo 1184,817
End Sub

Sub Execute(File)
	Dim sUserName
	Dim sPassword
	Dim sServerName
	
	arrCommands = Split(oHTA.commandLine, chr(94))
	
	sServerName = arrCommands(1)
	sUserName = arrCommands(2)
	sPassword = arrCommands(3)
		
	Dim ws
	Set ws = CreateObject("wscript.shell")
	ws.run(File&" ^"&sServerName&"^"&sUserName&"^"&sPassword)
	self.close()
End sub

Function NetworkLatency()
	Set objShell = CreateObject("Wscript.Shell")
	objShell.Run("powershell.exe -executionpolicy bypass start-process -FilePath '.\clumsy\clumsy.exe'")
End Function


</script>


